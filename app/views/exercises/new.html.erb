<%= link_to 'Voltar', backoffice_path %>
<h1>Cadastrar Treino</h1>

<div class="alert alert-danger">
  <%= flash[:message] %>
</div>

<%= form_with(model: @exercise, local: true) do |form| %>
  <div class="field">
    <%= form.label 'Nome' %>
    <%= form.text_field :name %>
  </div>
  <div class="actions">
    <%= form.submit 'Criar Treino' %>
  </div>
<% end %>
