<%= flash[:message] %>
<%= link_to 'Voltar', patients_path %>

<h1>Lista de Treinos - <%= @patient_exercises.first.patient.name %></h1>

<% if admin_signed_in? %>
  <tbody>
    <% @patient_exercises.each do |patient_exercise| %>
      <tr>
        <td>
          <p><%= patient_exercise.exercise.name %></p>
        </td>
      </tr>
    <% end %>
  </tbody>

  <%= link_to "Adicionar Treinos", new_patient_exercise_path(patient_id: @patient_id) %>
<% end %>
